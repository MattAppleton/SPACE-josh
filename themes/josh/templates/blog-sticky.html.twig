{% block body %}
<section id="body-wrapper" class="">
    <section class="flex-1">

        <div class="packerygridnogutter mx-auto ml-20">

            {% for child in collection %}
            
            {% set sticky_position = child.header.stickyposition %}
            {% set image = child.media.all|first %}
            
            <div class="w-full min-h-screen m-0">

            {% if sticky_position == "left" %}

                <div class="w-1/2 h-screen float-left inline-block sticky top-0 bg-red-400" >
                    {% include 'partials/sticky-items.html.twig' %}
                </div>
        


            {% elseif sticky_position == "right" %}

                    <div class="w-1/2 max-h-screen float-right inline-block bg-green-400">
                        {% include 'partials/sticky-items.html.twig' %}
                    </div>

            </div>


            {% else %}

                <div class=" hidden">
                        {% include 'partials/sticky-items.html.twig' %}
                </div>



            {% endif %}

            
            {% endfor %}
            
            
                    </div>
                </div>

            </div>
            

        </div>

